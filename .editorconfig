# EditorConfig is awesome: https://editorconfig.org

# Top-most EditorConfig file, stops searching parent dirs
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Terraform files (HCL)
[*.{tf,tfvars}]
indent_size = 2
indent_style = space

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

# JSON files
[*.json]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false  # trailing whitespace can be significant in JSON

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Template files (e.g. Terraform templates .tpl)
[*.tpl]
indent_style = space
indent_size = 2
